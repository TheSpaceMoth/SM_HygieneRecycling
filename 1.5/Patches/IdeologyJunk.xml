<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- For the hygiene functionality. Might be added by other mods -->
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="AncientKitchenSink"]</xpath>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/comps</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]</xpath>
						<value>
							<comps/>
						</value>
					</nomatch>
				</li>
						
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/comps/li[@Class="DubsBadHygiene.CompProperties_Pipe"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/comps</xpath>
						<value>
							<li Class="CompProperties_Forbiddable"/>
							<li Class="DubsBadHygiene.CompProperties_Pipe">
								<mode>Sewage</mode>
							</li>
							<li Class="DubsBadHygiene.CompProperties_Blockage"/>
						</value>
					</nomatch>
				</li>
				
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/placeWorkers</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]</xpath>
						<value>
							<placeWorkers/>
						</value>
					</nomatch>
				</li>
				
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/comps</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]</xpath>
						<value>
							<comps/>
						</value>
					</nomatch>
				</li>
						
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/placeWorkers/li[text()="DubsBadHygiene.PlaceWorker_SewageGrid"]</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/placeWorkers</xpath>
						<value>
							<li>DubsBadHygiene.PlaceWorker_SewageGrid</li>
						</value>
					</nomatch>
				</li>
				
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/hasInteractionCell</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/hasInteractionCell</xpath>
						<value>
							<hasInteractionCell>false</hasInteractionCell>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]</xpath>
						<value>
							<hasInteractionCell>false</hasInteractionCell>
						</value>
					</nomatch>
				</li>
				
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/rotatable</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/rotatable</xpath>
						<value>
							<rotatable>false</rotatable>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]</xpath>
						<value>
							<rotatable>false</rotatable>
						</value>
					</nomatch>
				</li>
				
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/thingClass</xpath>
					<match Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]/thingClass</xpath>
						<value>
							<thingClass>DubsBadHygiene.Building_basin</thingClass>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]</xpath>
						<value>
							<thingClass>DubsBadHygiene.Building_basin</thingClass>
						</value>
					</nomatch>
				</li>
				
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="AncientKitchenSink" and @DBHThirstAddon="true"]</xpath>
					<nomatch Class="PatchOperationAttributeSet">
						<xpath>Defs/ThingDef[defName="AncientKitchenSink"]</xpath>
						<attribute>DBHThirstAddon</attribute>
						<value>true</value>
					</nomatch>
				</li>
			</operations>
		</match>
	</Operation>
		

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="AncientToilet"]/comps/li[@Class="DubsBadHygiene.CompProperties_Pipe"]</xpath>
		<nomatch Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd" MayRequire="ludeon.rimworld.ideology">
					<xpath>/Defs/ThingDef[defName="AncientToilet"]</xpath>
					<value>
						<thingClass>HygieneRecycling.Building_JunkToilet</thingClass>
						<socialPropernessMatters>true</socialPropernessMatters>
						<building>
							<isSittable>true</isSittable>
							<ai_chillDestination>false</ai_chillDestination>
						</building>
						<placeWorkers>
							<li>DubsBadHygiene.PlaceWorker_SewageGrid</li>
						</placeWorkers>
						<comps>
							<li Class="CompProperties_Forbiddable"/>
							<li Class="DubsBadHygiene.CompProperties_Pipe">
								<mode>Sewage</mode>
							</li>
							<li Class="DubsBadHygiene.CompProperties_Blockage"/>
						</comps>
					</value>
				</li>
				<li Class="PatchOperationAdd" MayRequire="ludeon.rimworld.ideology">
					<xpath>/Defs/ThingDef[defName="AncientToilet"]/statBases</xpath>
					<value>
						<Comfort>-3</Comfort>
					</value>
				</li>
			</operations>
		</nomatch>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="AncientHydrant"]/comps/li[@Class="DubsBadHygiene.CompProperties_Pipe"]</xpath>
		<nomatch Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd" MayRequire="ludeon.rimworld.ideology">
					<xpath>/Defs/ThingDef[defName="AncientHydrant"]</xpath>
					<value>
						<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
						<placeWorkers>
							<li>DubsBadHygiene.PlaceWorker_WaterGrid</li>
							<li>DubsBadHygiene.PlaceWorker_SewageGrid</li>
							<li>DubsBadHygiene.PlaceWorker_UserGrid</li>
						</placeWorkers>
						<comps>
							<li Class="DubsBadHygiene.CompProperties_Pipe">
								<mode>Sewage</mode>
							</li>
							<li Class="DubsBadHygiene.CompProperties_WaterInlet">
								<Radius>3.9</Radius>
							</li>
						</comps>
						<modExtensions>
							<li Class="DubsBadHygiene.BuildWaterExt" />
						</modExtensions>
					</value>
				</li>
			</operations>
		</nomatch>
	</Operation>
	
	<!-- For the minify functionality. Might be added by other mods -->
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="AncientKitchenSink"]/minifiedDef</xpath>
		<nomatch Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd" MayRequire="ludeon.rimworld.ideology">
					<xpath>/Defs/ThingDef[defName="AncientKitchenSink"]</xpath>
					<value>
						<thingCategories>
							<li>BuildingsHygiene</li>
						</thingCategories>
						<minifiedDef>MinifiedThing</minifiedDef>
					</value>
				</li>
				<li Class="PatchOperationAdd" MayRequire="ludeon.rimworld.ideology">
					<xpath>/Defs/ThingDef[defName="AncientKitchenSink"]/statBases</xpath>
					<value>
						<Mass>15</Mass>
					</value>
				</li>
			</operations>
		</nomatch>
	</Operation>
	
	<Operation Class="PatchOperationConditional" MayRequire="ludeon.rimworld.ideology">
		<xpath>/Defs/ThingDef[defName="AncientToilet"]/minifiedDef</xpath>
		<nomatch Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd" MayRequire="ludeon.rimworld.ideology">
					<xpath>/Defs/ThingDef[defName="AncientToilet"]</xpath>
					<value>
						<thingCategories>
							<li>BuildingsHygiene</li>
						</thingCategories>
						<minifiedDef>MinifiedThing</minifiedDef>
						<rotatable>true</rotatable>
					</value>
				</li>
				<li Class="PatchOperationAdd" MayRequire="ludeon.rimworld.ideology">
					<xpath>/Defs/ThingDef[defName="AncientToilet"]/statBases</xpath>
					<value>
						<Mass>15</Mass>
					</value>
				</li>
			</operations>
		</nomatch>
	</Operation>
	
	<Operation Class="PatchOperationConditional" MayRequire="ludeon.rimworld.ideology">
		<xpath>/Defs/ThingDef[defName="AncientHydrant"]/minifiedDef</xpath>
		<nomatch Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd" MayRequire="ludeon.rimworld.ideology">
					<xpath>/Defs/ThingDef[defName="AncientHydrant"]</xpath>
					<value>
						<thingCategories>
							<li>BuildingsHygiene</li>
						</thingCategories>
						<minifiedDef>MinifiedThing</minifiedDef>
					</value>
				</li>
				<li Class="PatchOperationAdd" MayRequire="ludeon.rimworld.ideology">
					<xpath>/Defs/ThingDef[defName="AncientHydrant"]/statBases</xpath>
					<value>
						<Mass>15</Mass>
					</value>
				</li>
			</operations>
		</nomatch>
	</Operation>
	
	<!-- Finally update the descriptions to make things interesting. This will override so no checks needed -->
	<Operation Class="PatchOperationSequence">
		<operations>			
			<li Class="PatchOperationReplace" MayRequire="ludeon.rimworld.ideology">
				<xpath>/Defs/ThingDef[defName="AncientKitchenSink"]/description</xpath>
				<value>
					<description>An ancient kitchen sink made of some non-metallic fiber-sheet material. It is badly deteriorated but barely works.\n\nHow it got here must be a long story.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="ludeon.rimworld.ideology">
				<xpath>/Defs/ThingDef[defName="AncientHydrant"]/description</xpath>
				<value>
					<description>An ancient hydrant. Heavily rusted, it might be possible to use for a little water.\n\nHow it got here is hard to say.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="ludeon.rimworld.ideology">
				<xpath>/Defs/ThingDef[defName="AncientToilet"]/description</xpath>
				<value>
					<description>An ancient toilet. Dirty and broken, not going to be pleasent to use.\n\nHow it got here is hard to say.</description>
				</value>
			</li>
			<!-- etc -->
		</operations>
	</Operation>
	
</Patch>
